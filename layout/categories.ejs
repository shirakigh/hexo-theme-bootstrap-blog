<!-- title -->
<div class="page-header <% if (theme.inverse){ %>page-header-inverse <% } %>">
	 <h2 class="title <% if (theme.inverse){ %>title-inverse <% } %>"><i class="fa fa-folder"></i> <%= page.title %></h2>
</div>

<div class="row page">

	<% if (theme.widgets.length) { %>
	    <div class="col-md-9">
	<% } else { %>
	    <div class="col-md-12">
	<% } %>

	<div id="top_search"></div>

    <% if (site.categories.length) { %>
        <div class="widget">
			<ul class="tag_box inline list-unstyled">
			<% site.categories.sort('length', -1).each(function(item){ %>
				<li><a href="#<%= item.name %>"><%= item.name %><span><%= item.posts.length %></span></a></li>
			<% }); %>
			</ul>
		</div>

        <div class="archive">
		    <% site.categories.sort('length', -1).each(function(item){ %>
		    <h4 class="archive-ul show" data-toggle="collapse" id="<%= item.name %>" data-target="#modal-<%= item.name %>"> <%= item.name %> <b class="caret"></b></h4>
		    <ul id="modal-<%= item.name %>" class="collapse in">

		        <% site.posts.sort('date', -1).forEach(function(it){ %>
			        <% if (it.categories.length == 1 && it.categories.data[0]._id == item._id){ %>
		   	        <li class="listing-item"><%= date(it.date, 'YYYY-MM-DD') %> &raquo; <a href="<%= config.root %><%= it.path %>" <% if (it.description) { %> title="<%= it.description %>" <% } %>><%= it.title %></a></li>
			        <% } %>
		        <% }); %>
		   </ul>
		   <% }); %>
		   </ul>
        </div>
    <% } %>

</div> <!-- col-md-9 -->


</div> <!-- row-fluid -->
